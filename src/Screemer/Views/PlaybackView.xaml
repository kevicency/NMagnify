<Controls:MetroWindow x:Class="Screemer.Views.PlaybackView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Behaviours="clr-namespace:MahApps.Metro.Behaviours;assembly=MahApps.Metro"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      Title="PlaybackView"
                      Width="{Binding PlaybackRegion.Width}"
                      Height="{Binding PlaybackRegion.Height}"
                      Background="WhiteSmoke"
                      Left="{Binding PlaybackRegion.Left}"
                      MouseLeftButtonDown="DragMoveWindow"
                      ShowTitleBar="False"
                      Top="{Binding PlaybackRegion.Top}">
    <Grid>
        <Image HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Source="{Binding CapturedImage}"
               Stretch="Uniform" />
    </Grid>
</Controls:MetroWindow>
